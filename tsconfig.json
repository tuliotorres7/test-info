{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "module": "commonjs",
    "strict": true,
    "target": "es6",
    "lib": ["es2017", "dom"],
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node", "mocha", "chai"],
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
